        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="banner">
            Banner here
            
        </div>
        <div class="left-panel">
            user photo here<br>
            <h1> Current_User <%= @current_user.username %></h1>
            <%= link_to "My Profile", user_path(@current_user) %><br>
            link to my events here<br><br><br>
            <p><%= button_to "Logout", logout_path, method: :delete %> </p>
        </div>
        <div class="main-panel">
            <div class="nav">
                <%= button_to "Home", user_home_path, method: :get %>
                <%= button_to "Posts", posts_path, method: :get %>
